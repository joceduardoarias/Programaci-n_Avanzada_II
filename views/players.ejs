<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FIFA Style Player Cards</title>
    <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
    <div class="card-container">
        <% players.forEach(player => { %>
        <div class="player-card">
            <div class="player-header">
                <img src="<%= player.image %>" alt="<%= player.nombre %>" class="player-image">
            </div>
            <div class="player-info">
                <h2 class="player-name"><%= player.nombre %></h2>
                <p class="player-position"><%= player.posicion %></p>
                <p class="player-team"><%= player.equipo %></p>
            </div>
            <div class="player-stats">
                <div class="stat">
                    <span class="stat-label">Velocidad</span>
                    <span class="stat-value"><%= player.velocidad %></span>
                </div>
                <div class="stat">
                    <span class="stat-label">Tiro</span>
                    <span class="stat-value"><%= player.tiro %></span>
                </div>
                <div class="stat">
                    <span class="stat-label">Pase</span>
                    <span class="stat-value"><%= player.pase %></span>
                </div>
                <div class="stat">
                    <span class="stat-label">Dribbling</span>
                    <span class="stat-value"><%= player.dribbling %></span>
                </div>
                <div class="stat">
                    <span class="stat-label">Defensa</span>
                    <span class="stat-value"><%= player.defensa %></span>
                </div>
                <div class="stat">
                    <span class="stat-label">FÃ­sico</span>
                    <span class="stat-value"><%= player.fisico %></span>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>